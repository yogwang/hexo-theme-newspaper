<%
  // 文章标题部分
 if (post.link){ 
 // 如果是外链的情况，输出 h1 + a + title
%>
  <h1 class="<%= class_name %>" itemprop="name">
    <a href="<%- url_for(post.link) %>"  title="<%= post.title || '(no title)' %>" alt="<%= post.title || '(no title)' %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ 
    // 在列表页中输出h2 + a + title
  %>
    <h2 class="<%= class_name %>" itemprop="name">
      <a href="<%- url_for(post.path) %>" title="<%= post.title || '(no title)' %>" alt="<%= post.title || '(no title)' %>"><%= post.title %></a>
    </h2>
  <% 
    } else { 
    // 详情页中输出 h1 + title
  %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>