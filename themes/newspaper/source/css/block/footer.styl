#footer {
  width: 100%;
  text-align: center;
  background: #f5f5f5;
  padding: 4vh 0;
  position: absolute;
  left: 0;
  bottom: 0;
}
#gotop {
  width: 45px;
  height: @width;
  line-height: @width;
  font-size: 25px;
  color: #333;
  text-align: center;
  background: #dedede;
  border-radius: 50%;
  display: block;
  cursor: pointer;
  position: fixed;
  right: 12vh;
  bottom: 8vw;
}

/*
 * 适配
 */
@media (max-width: 970px) {
  #gotop {
    right: 2.5vh;
  }
}
