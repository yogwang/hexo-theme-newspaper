.archive-article-inner, .article-inner {
  font-size: 15px;
  header {
    ul, li {
      list-style-type: none;
      padding: 0;
      margin: 0 3px 0 0;
      display: flex;
    }
    .article-tag-list {
      &::before {
        content: 'Tags：';
        display: inline;
      }
      li {
        display: inline;
        &+li::before {
          content: ',';
          margin: 0 3px;
          display: inline-block;
        }
      }
    }
    .article-category {
      margin-left: auto;
    }
  }
}
// 文章列表页
.archive-article {
  padding: 3vh 15px 5px;
  border-top: 5px solid #404040;
  // border-radius 12px
  margin: 2vh 0 3vh;
  // box-shadow 2px 2px 6px #ddd
  &:first-child {
    padding-top: 15px;
    border-top: none;
  }
  .archive-article-header-meta {
    font-size: 13px;
    color: #999;
    display: flex;
    justify-content: space-between;
  }
  .archive-article-title {
    font-size: 22px;
    font-weight: normal;
    color: #222;
    margin: 5px 0 25px;
    &:hover {
      color: red;
    }
  }
  .archive-article-date {
    text-align: right;
  }
}
// 查看更多
.article-more-link {
  text-align: center;
  a {
    line-height: 40px;
    text-decoration: none;
    padding: 5px 0;
    border-bottom: 1px solid currentColor;
    transition: padding .4s;
    &:hover {
      padding: 5px 15px;
    }
  }
}
// 文章内容
.article-inner {
  .article-meta {
    color: #444;
    display: flex;
    justify-content: space-between;
    .article-tag-list {
      font-size: 12px;
      color: #777;
    }
  }
  .article-header {
    color: #333;
    padding: 1em 0;
    border-bottom: 1px solid #ddd;
    margin-bottom: 3vh;
    .article-title {
      font-size: 24px;
      font-weight: normal;
      color: #222;
      margin-top: 1em;
      margin-bottom: 0;
    }
    .article-updated {
      font-size: 13px;
      text-align: right;
      color: #777;
    }
  }
  .article-entry {
    position: relative;
    #expired-tag {
      min-height: 35px;
      line-height: @min-height;
      color: #7d6970;
      background: rgba(pink, .2);
      padding: 0 10px;
      border-radius: 5px;
      margin-bottom:2vh;
      &:empty{
        display: none;  
      }
    }
  }
  .article-content {
    table {
      thead {
        color: white;
        background: #333333;
        tr {
          height: 50px;
          th {
            padding: 0 15px;
          }
        }
      }
      tbody {
        tr {
          height: 50px;
          border-bottom: 1px solid #333;
          td {
            padding: 0 15px;
          }
        }
      }
    }
  }
}
