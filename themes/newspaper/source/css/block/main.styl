// 外部容器
#wrap {
  max-width: 1200px;
  padding: 25px 1vw 200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
// 内部容器
#container {
  min-height: 50vh;
  width: calc(100% - 300px);
  position: relative;
  .article-excerpt,.article-content {
    font-size: 17px;
    a {
      word-break: break-word;
      background: linear-gradient(to bottom, transparent 70%, #d4faff 70%);
      // transition: background .4s;
      &:before, &:after {
        content: '';
        display: inline;
      }
    }
    p {
      line-height: 1.8;
    }
    // 单行代码
    code {
      &:not([class]), &[class=''] {
        line-height: 20px;
        color: #c7254e;
        word-break: break-word;
        background: #f9f2f4;
        padding: 0 8px;
        border-radius: 2px;
        display: inline-block;
      }
    }
    // 代码块
    pre {
      padding-top: 2em;
      &:before {
        content: attr(data-language);
        color: #c3c3c3;
        margin-top: -1.5em;
        display: inline-block;
        position: absolute;
        right: 25px;
        pointer-events: none;
      }
      .caption {
        font-size:12px;
        color: #222;
        margin-top: -2em;
        position: absolute;
        a {
          margin: 0 5px;
        }
      }
    }
  }
}
/*
 * 适配
 */
@media (max-width: 970px) {
  #wrap {
    padding: 5vh 2vw 120px;
    flex-wrap: wrap;
  }
  #container {
    width: 100%;
  }
}
