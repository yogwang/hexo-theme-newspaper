@import 'reset.css'; // 默认样式重置
@import 'font_SF.css'; // 引入logo字体
/*
 * 全局
 */
html, body {
  min-height: 100vh;
  font-size: 13px;
  color: #404040;
  padding: 0;
  margin: 0;
  position: relative;
}
blockquote {
  font-family: inherit;
  color: #222;
  border-left-color:#d45c07
}
a {
  color: inherit;
  text-decoration: none;
  &:hover {
    color: red;
  }
}
img {
  max-width: 100%;
}


@import './block/header.styl'; // 页头
@import './block/main.styl'; // 主体
@import './block/pagination.styl'; // 分页
@import './block/sidebar.styl'; // 侧边栏
@import './block/footer.styl'; // 页尾
@import './block/archives.styl'; // 文章页样式
@import './block/about.styl'; // 关于我
  
::selection {
  color: white;
  background-color: #40bdd0;
}
html {
  &::-webkit-scrollbar {
    width: 10px;
  }
  &::-webkit-scrollbar-track-piece {
    border: none;
    background-color: #f1f1f1;
  }
  &::-webkit-scrollbar-thumb {
    border-radius: 4px;
    background: #4a4e50;
  }
  &::-webkit-scrollbar-thumb:hover {
    background: #313131;
  }
  &::-moz-selection {
    background: #313131;
    color: #f1f1f1;
    text-shadow: none;
  }
}
